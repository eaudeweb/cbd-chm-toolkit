<?php

/**
 * @file
 * Install file for chm_news.
 */

/**
 * Implements hook_install().
 *
 * @ingroup chm_news
 */
function chm_news_install() {
  // Do not allow the locked content type to be deleted.
  $locked = Drupal::state()->get('node.type.locked');
  $locked['chm_news'] = 'chm_news';
  Drupal::state()->set('node.type.locked', $locked);
}

/**
 * Implements hook_uninstall().
 *
 * @ingroup chm_news
 */
function chm_news_uninstall() {
  // Allow locked_content_type to be deleted.
  $locked = Drupal::state()->get('node.type.locked');
  unset($locked['dbd_news']);
  Drupal::state()->set('node.type.locked', $locked);
}
